@model IEnumerable<IMS.Models.Vendor>

@{
    ViewData["Title"] = "Vendor Management";
}

<div class="page-heading">
    <div class="page-title mb-4 d-flex justify-content-between align-items-center">
        <div>
            <h3>Vendor Management</h3>
            <p class="text-subtitle text-muted mb-0">View all vendors below</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Vendor
        </a>
    </div>

    <section class="section">
        <div class="card">
            <div class="card-header">
                <h5>Vendor List</h5>
            </div>
            <div class="card-body">
                <table class="table table-striped" id="table1">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Vendor Name</th>
                            <th>Contact No</th>
                            <th>Address</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var vendor in Model)
                        {
                            <tr>
                                <td>@vendor.VendorId</td>
                                <td>@vendor.VendorName</td>
                                <td>@vendor.ContactNo</td>
                                <td>@vendor.Address</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@vendor.VendorId" class="btn btn-sm btn-warning me-1">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@vendor.VendorId" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script src="~/assets/vendors/simple-datatables/simple-datatables.js"></script>
    <script>
        let table1 = document.querySelector('#table1');
        new simpleDatatables.DataTable(table1);
    </script>
}
