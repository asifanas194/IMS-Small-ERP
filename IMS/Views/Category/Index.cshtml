@model IEnumerable<IMS.Models.Category>

@{
    ViewData["Title"] = "Category Management";
}

<div class="page-heading">
    <div class="page-title mb-4 d-flex justify-content-between align-items-center">
        <div>
            <h3>Category Management</h3>
            <p class="text-subtitle text-muted mb-0">View and manage product categories</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Category
        </a>
    </div>

    <section class="section">
        <div class="card">
            <div class="card-header">
                <h5>Category List</h5>
            </div>
            <div class="card-body">
                <table class="table table-striped" id="table1">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Category Name</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>@category.CategoryId</td>
                                <td>@category.CategoryName</td>
                                <td>@category.Description</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@category.CategoryId" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script src="~/assets/vendors/simple-datatables/simple-datatables.js"></script>
    <script>
        let table1 = document.querySelector('#table1');
        new simpleDatatables.DataTable(table1);
    </script>
}
