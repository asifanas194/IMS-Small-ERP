@model IMS.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="page-heading">
    <div class="page-title mb-4 d-flex justify-content-between align-items-center">
        <div>
            <h3>Delete Category</h3>
            <p class="text-subtitle text-muted mb-0">Confirm before deleting this category</p>
        </div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>

    <section class="section">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5>Are you sure you want to delete this category?</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Category ID:</dt>
                    <dd class="col-sm-9">@Model.CategoryId</dd>

                    <dt class="col-sm-3">Category Name:</dt>
                    <dd class="col-sm-9">@Model.CategoryName</dd>

                    <dt class="col-sm-3">Description:</dt>
                    <dd class="col-sm-9">@Model.Description</dd>
                </dl>

                <!-- ✅ FIXED FORM -->
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="CategoryId" />
                    <div class="text-end">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Confirm Delete
                        </button>
                        <a asp-action="Index" class="btn btn-light border">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>
