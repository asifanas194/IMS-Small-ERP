@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Product Management";
}

<div class="page-heading">
    <div class="page-title mb-4 d-flex justify-content-between align-items-center">
        <div>
            <h3>Product Management</h3>
            <p class="text-subtitle text-muted mb-0">View and manage all products</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Product
        </a>
    </div>

    <!-- Filter Section -->
    <form method="get" class="mb-3 row g-3">
        <div class="col-md-4">
            <select asp-items="ViewBag.Categories" name="categoryId" class="form-select">
                <option value="">-- Filter by Category --</option>
            </select>
        </div>
        <div class="col-md-4">
            <select asp-items="ViewBag.Vendors" name="vendorId" class="form-select">
                <option value="">-- Filter by Vendor --</option>
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-success w-100">Filter</button>
        </div>
        <div class="col-md-2">
            <a asp-action="Index" class="btn btn-secondary w-100">Reset</a>
        </div>
    </form>

    <!-- Table -->
    <section class="section">
        <div class="card">
            <div class="card-header">
                <h5>Product List</h5>
            </div>
            <div class="card-body">
                <table class="table table-striped" id="table1">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Product</th>
                            <th>Category</th>
                            <th>Vendor</th>
                            <th>Qty</th>
                            <th>Cost Price</th>
                            <th>Sale Price</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in (IEnumerable<dynamic>)Model)
                        {
                            <tr>
                                <td>@p.ProductId</td>
                                <td>@p.ProductName</td>
                                <td>@p.CategoryName</td>
                                <td>@p.VendorName</td>
                                <td>@p.Quantity</td>
                                <td>@p.CostPrice</td>
                                <td>@p.SalePrice</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@p.ProductId" class="btn btn-sm btn-warning me-1">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@p.ProductId" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>

@if (TempData["Success"] != null)
{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Success',
            text: '@TempData["Success"]',
            confirmButtonColor: '#3085d6'
        });
    </script>
}

@section Scripts {
    <script src="~/assets/vendors/simple-datatables/simple-datatables.js"></script>
    <script>
        new simpleDatatables.DataTable(document.querySelector('#table1'));
    </script>
}
